<%# <%=javascript_include_tag 'responsiveslides.min', "data-turbolinks-track" => true %> <%#<script src= "js/responsiveslides.min.js"></script> %>
<script>
    $(function () {
        $("#slider").responsiveSlides({
            auto: true,
            nav: true,
            speed: 500,
            namespace: "callbacks",
            pager: true,
        });
    });
</script>

<div class="banner">
  <div class="header">
    <div class="logo">
      <a href="/">
        <%= image_tag('logo.jpg') %>
      </a>
      <label class="label" style="font-size: .8em">DEPARTMENT OF COMPUTER SCIENCE. HPU SHIMLA CAMPUS</label>
    </div>
    <%= render 'partials/navigation' %>
    <!-- script-for-menu -->
    <script>
        $("span.menu").click(function () {
            $("ul.navig").slideToggle("slow", function () {
            });
        });
    </script>
    <!-- script-for-menu -->

    <div class="clearfix"></div>
  </div>
  <div class="slider">
    <div class="caption">
      <div class="container">
        <div class="callbacks_container">
          <ul class="rslides" id="slider">
            <li><h3>Nurturing the students of yesterday into resolute builders of the future</h3></li>
            <li><h3>To make the forthcoming generations aware of computer education</h3></li>
            <li><h3>Impart technical as well as interpersonal skills to the students</h3></li>
          </ul>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="banner-grids">
    <div class="container">
      <div class="col-md-4 banner-grid">
        <h3>Announcements
          <small class='label label-see-all pull-right'>
            <%= link_to 'See all', controller: 'announcements', action: 'index'%>
          </small>
        </h3>
        <div class="banner-grid-sec">
          <%= if Announcement.count > 0
                render partial: "partials/announcements", collection: Announcement.order("updated_at desc").limit(4)
              else
                "<h4 class='text-danger'>No new announcements</h4>".html_safe
              end
          %>
        </div>
      </div>

      <div class="col-md-4 banner-grid">
        <h3>    Results
          <small class='label label-see-all pull-right'>
            <%= link_to 'See all', controller: 'results', action: 'index' %>
          </small>

        </h3>

        <div class="banner-grid-sec">
          <%= if Result.count > 0
           render partial: "partials/results", collection: Result.order("updated_at desc").limit(4)
          else
               "<h4 class='text-danger'>No new result</h4>".html_safe
          end
          %>

          <div class="more">

          </div>
        </div>
      </div>

      <div class="col-md-4 banner-grid">
        <h3>For Students</h3>

        <div class="banner-grid-sec news_sec">
          <div class="news-ltr">
            <h4 class="text-danger">No new notification</h4>

            <p></p>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
