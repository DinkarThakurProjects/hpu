<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-login">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <a href="#" class="active" id="login-form-link">Login</a>
          </div>
        </div>
        <hr>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.label :email %><br/>
                  <%= f.email_field :email, autofocus: true, tabindex: "1", class: "form-control", placeholder: "Email", value: "" %>
                </div>

                <div class="form-group">
                  <%= f.label :password %><br/>
                  <%= f.password_field :password, autocomplete: "off", tabindex: "2", class: "form-control", placeholder: "Password" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="form-group text-center">
                      <%= f.check_box :remember_me, tabindex: "3", class: "" %>
                      <%= f.label :remember_me %>
                    </div>
                <% end -%>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Log in", tabindex: "4", class: "form-control btn btn-login" %>
                    </div>
                  </div>
                </div>
            <% end %>
            <%= render "admin/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
